<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet /css/Styles.css?>
<?import java.net.URL?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="Client.Controller"
      prefHeight="400.0"
      prefWidth="600.0">

    <HBox fx:id="upperPanel">
        <TextField HBox.hgrow="ALWAYS"
                   promptText="Login"
                   fx:id="loginField"/>
        <PasswordField HBox.hgrow="ALWAYS"
                       promptText="Password"
                       fx:id="passwordField"
                       onAction="#tryToAuthentication"/>
        <Button text="Login"
                onAction="#tryToAuthentication"/>
    </HBox>

    <TextArea
            fx:id="textArea"
            editable="false"
            VBox.vgrow="ALWAYS"/>

    <HBox fx:id="bottomPanel"
          managed="false"
          visible="false">
        <TextField
                fx:id="textField"
                HBox.hgrow="ALWAYS"
                promptText="Write a message..."
                onAction="#sendMessage"/>
        <Button
                fx:id="button"
                text="Sent"
                onAction="#sendMessage"/>
    </HBox>

    <stylesheets>
        <URL value="@/Client/css/Styles.css"/>
    </stylesheets>
</VBox>